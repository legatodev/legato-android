<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/nearbyUserPhotoImageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/nearbyUserNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/nearbyUserPhotoImageView"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="Name" />

    <TextView
        android:id="@+id/nearbyUserDistanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="200dp"
        android:layout_toRightOf="@id/nearbyUserNameTextView"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="Name" />
    </RelativeLayout>

</LinearLayout>