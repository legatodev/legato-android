<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="18dp"
        android:text="@string/username"
        app:layout_constraintBottom_toBottomOf="@+id/textInputLayout"
        app:layout_constraintEnd_toStartOf="@+id/textInputLayout"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/usernameTextView"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/openTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="18dp"
        android:text="Open to..."
        app:layout_constraintBottom_toTopOf="@+id/jamCheckBox"
        app:layout_constraintStart_toStartOf="@+id/usernameTextView"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/jamCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="259dp"
        android:text="Jam Session"
        app:layout_constraintStart_toStartOf="@+id/openTo"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/collaborateCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collaborate"
        app:layout_constraintStart_toStartOf="@+id/jamCheckBox"
        app:layout_constraintTop_toBottomOf="@+id/jamCheckBox" />

    <CheckBox
        android:id="@+id/startBandCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start a band"
        app:layout_constraintStart_toStartOf="@+id/collaborateCheckBox"
        app:layout_constraintTop_toBottomOf="@+id/collaborateCheckBox" />

    <Switch
        android:id="@+id/proximityAlertSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="173dp"
        android:text="Enable Proximity Alerts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/startBandCheckBox"
        app:layout_constraintTop_toBottomOf="@+id/startBandCheckBox"
        app:layout_constraintVertical_bias="0.19" />

    <SeekBar
        android:id="@+id/proximityRadiusSeekBar"
        android:layout_width="186dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:max="100"
        app:layout_constraintStart_toStartOf="@+id/proximityAlertSwitch"
        app:layout_constraintTop_toBottomOf="@+id/proximityAlertSwitch" />

    <Switch
        android:id="@+id/enableCurrentLocationSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Enable Current Location"
        app:layout_constraintStart_toStartOf="@+id/proximityRadiusSeekBar"
        app:layout_constraintTop_toBottomOf="@+id/proximityRadiusSeekBar" />

    <SeekBar
        android:id="@+id/searchRadiusSeekBar"
        android:layout_width="194dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/enableCurrentLocationSwitch"
        app:layout_constraintTop_toBottomOf="@+id/enableCurrentLocationSwitch"
        android:max="100"/>

    <TextView
        android:id="@+id/proximityRadiusValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/proximityRadiusSeekBar"
        app:layout_constraintTop_toBottomOf="@+id/proximityAlertSwitch" />

    <TextView
        android:id="@+id/searchRadiusValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/searchRadiusSeekBar"
        app:layout_constraintTop_toBottomOf="@+id/enableCurrentLocationSwitch" />

</android.support.constraint.ConstraintLayout>