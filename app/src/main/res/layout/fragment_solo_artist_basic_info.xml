<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp">

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/displayname"
            android:layout_alignParentTop="true"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/soloDisplayNameTextInputLayout"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/usernameTextView"
            android:layout_marginLeft="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/soloDisplayNameTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/openTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Open to..."
            android:layout_below="@+id/usernameTextView"/>

        <CheckBox
            android:id="@+id/jamCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jam Session"
            android:layout_below="@+id/openTo"
            android:layout_marginTop="16dp"/>

        <CheckBox
            android:id="@+id/collaborateCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collaborate"
            android:layout_below="@+id/jamCheckBox"/>

        <CheckBox
            android:id="@+id/startBandCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start a band"
            android:layout_below="@+id/collaborateCheckBox" />

        <TextView
            android:id="@+id/searchRadiusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Search Radius"
            android:layout_below="@+id/startBandCheckBox"/>

        <SeekBar
            android:id="@+id/searchRadiusSeekBar"
            android:layout_width="194dp"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:min="1"
            android:max="100"
            android:progress="50"
            android:layout_toRightOf="@id/searchRadiusTextView"
            android:layout_below="@+id/startBandCheckBox"/>

        <TextView
            android:id="@+id/searchRadiusValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="16dp"
            android:text="50mi"
            android:layout_toRightOf="@+id/searchRadiusSeekBar"
            android:layout_below="@+id/startBandCheckBox"/>

        <Switch
            android:id="@+id/proximityAlertSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Enable Proximity Alerts"
            android:layout_below="@+id/searchRadiusTextView" />

        <TextView
            android:id="@+id/proximityRadiusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Proximity Radius"
            android:layout_below="@+id/proximityAlertSwitch"/>

        <SeekBar
            android:id="@+id/proximityRadiusSeekBar"
            android:layout_width="186dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:min="15"
            android:max="100"
            android:layout_below="@+id/proximityAlertSwitch"
            android:layout_toRightOf="@+id/proximityRadiusTextView"/>

        <TextView
            android:id="@+id/proximityRadiusValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:text="15ft"
            android:layout_below="@+id/proximityAlertSwitch"
            android:layout_toRightOf="@+id/proximityRadiusSeekBar" />
    </RelativeLayout>
</RelativeLayout>