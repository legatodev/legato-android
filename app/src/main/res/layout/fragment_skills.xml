<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/skillsRecyclerView"
        android:layout_width="match_parent"
        android:transcriptMode="alwaysScroll"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addSkillButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginLeft="164dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skillsRecyclerView"
        app:srcCompat="@android:drawable/ic_menu_add"/>

    <CheckBox
        android:id="@+id/vocalsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Vocals"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toBottomOf="@+id/addSkillButton"
        tools:layout_editor_absoluteX="16dp" />

    <CheckBox
        android:id="@+id/writingCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Writing"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toBottomOf="@+id/vocalsCheckBox"
        tools:layout_editor_absoluteX="16dp" />

    <CheckBox
        android:id="@+id/rapperCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rapper/MC"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toBottomOf="@+id/writingCheckBox"
        tools:layout_editor_absoluteX="16dp" />

</android.support.constraint.ConstraintLayout>