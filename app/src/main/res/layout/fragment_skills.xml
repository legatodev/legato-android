<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/skillsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:transcriptMode="alwaysScroll"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addSkillButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_below="@+id/skillsRecyclerView"
        app:srcCompat="@android:drawable/ic_menu_add"
        app:backgroundTint="@color/rounded_button_background"
        android:tint="@color/white"/>

    <CheckBox
        android:id="@+id/vocalsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:text="@string/vocals"
        android:layout_below="@+id/addSkillButton"/>

    <CheckBox
        android:id="@+id/writingCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/writing"
        android:layout_below="@+id/vocalsCheckBox"
        android:layout_marginLeft="16dp"/>

    <CheckBox
        android:id="@+id/rapperCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rapper"
        android:layout_below="@+id/writingCheckBox"
        android:layout_marginLeft="16dp"/>

    <Button
        android:id="@+id/finishSoloRegistrationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/finish"
        android:background="@color/selector_selected"
        android:layout_alignParentBottom="true"
        android:enabled="false"
        android:onClick="onFinishSoloRegistration"/>

</RelativeLayout>