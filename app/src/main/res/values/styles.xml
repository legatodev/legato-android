<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LegatoCheckBoxStyle" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@drawable/legato_selector</item>
        <item name="buttonTint">@drawable/legato_selector</item>
    </style>

    <style name="LegatoRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@drawable/legato_selector</item>
        <item name="buttonTint">@drawable/legato_selector</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        .............your other style configurations.............
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="radioButtonStyle">@style/LegatoRadioButtonStyle</item>
        <item name="android:radioButtonStyle">@style/LegatoRadioButtonStyle</item>
        <item name="checkboxStyle">@style/LegatoCheckBoxStyle</item>
        <item name="android:checkboxStyle">@style/LegatoCheckBoxStyle</item>
    </style>

    <style name="ThemeOverlay.FilterButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

</resources>
